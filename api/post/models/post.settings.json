{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "tags": {
      "collection": "tag"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "url_slug": {
      "type": "string",
      "regex": "^[a-zA-Z+_1-9]+$",
      "required": true,
      "unique": true,
      "maxLength": 100,
      "minLength": 10
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100,
      "minLength": 10
    },
    "category": {
      "via": "posts",
      "model": "categories"
    }
  }
}
